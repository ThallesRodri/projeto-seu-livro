    <body style="min-width:372px;">

        <%- include ('../partials/navbarAdm.ejs') %>


        <main class="flex-fill">
            <div class="container">
                <h1>Cadastrar Livros</h1>
                <div class="row gx-3">

                    <div class="col-8">
                        
                        <form method="POST" action="/adm/livro/save">
                            <div class="form-floating mb-3 col-md-6 col-lg-4">
                                <label for="txtCEP">Titulo</label>
                                <input type="text" class="form-control" id="" name="titulo">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Autor</label>
                                <input type="text" class="form-control" id="" name="autor">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Editora</label>
                                <input type="text" class="form-control" id="" name="editora">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Edição</label>
                                <input type="text" class="form-control" id="" name="edicao">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Ano</label>
                                <input type="text" class="form-control" id="" name="ano">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <p for="categoria" class="form-label">Categoria (selecione multiplos com o botão ctrl)</p>
                                <select class="form-select form-select-sm"   name="categoria" multiple>
                                    <option value="Terror">Terror</option>
                                    <option value="Suspense">Suspense</option>
                                    <option value="Romance">Romance</option>
                                    <option value="Biografico">Biografico</option>
                                    <option value="Ciência">Ciência</option>
                                    <option value="Autoajuda">Autoajuda</option>
                                    <option value="Teen">Teen</option>
                                    <option value="Religioso">Religioso</option>
                                    <option value="Quadrinho">Quadrinho</option>
                                    <option value="Ação">Ação</option>
                                    <option value="Aventura">Aventura</option>
                                    <option value="Ficção Científica">Ficção Científica</option>
                                </select>
                            </div>
                            <!-- <div class="form-group">
                                <label for="opcoesSelecionadas">Categorias Selecionadas:</label>
                                <input type="text" class="form-control" id="opcoesSelecionadas" name="categoria[]" readonly>
                            </div> -->

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Sinopse</label>
                                <textarea type="text" class="form-control" id="" name="sinopse"></textarea>
                            </div>

                            <div class="form-floating mb-3 col-md-2">
                                <label for="" class="form-label">Número de Páginas</label>
                                <input type="text" class="form-control" id="" name="numeroPages">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Altura</label>
                                <input type="text" class="form-control" id="" name="altura">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Largura</label>
                                <input type="text" class="form-control" id="" name="largura">
                            </div>

                            <div class="form-floating mb-3 col-md-4">
                                <label for="" class="form-label">Profundidade</label>
                                <input type="text" class="form-control" id="" name="profundidade">
                            </div>

                            <div class="form-floating mb-3 col-md-4">
                                <label for="" class="form-label">Preço</label>
                                <input type="text" class="form-control" id="" name="preco">
                            </div>

                            <div class="form-floating mb-3 col-md-4">
                                <label for="" class="form-label">Quantidade</label>
                                <input type="text" class="form-control" id="" name="quantidade" placeholder="">
                            </div>

                            <div class="form-floating mb-3 col-md-8">
                                <label for="" class="form-label">Código de Barras</label>
                                <input  class="form-control" type="text" id="" placeholder=" " name="codBarras">
                                
                            </div>

                            <div class="col-md-8">
                                <button class="btn btn-danger btn-lg" type="submit">Adicionar novo Livro</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
                
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
        </main>

